<Window x:Class="PubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid Background="{StaticResource SpecialGradient}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2"  Background="{StaticResource SpecialGradient}">
            <WrapPanel >
                <Button Margin="60,20,60,0" Style="{StaticResource OrangeButton}" x:Name="BuyBtn" Content="Buy"  Width="100" Height="60"></Button>
                <Button Margin="60,20,60,0" Style="{StaticResource OrangeButton}" x:Name="ResetBtn" Content="Reset"  Width="100" Height="60"></Button>
                <Button Margin="60,20,0,0" Style="{StaticResource OrangeButton}" x:Name="ShowHistoryBtn" Content="Show History"  Width="100" Height="60"></Button>
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="0">
            <ComboBox x:Name="ComboBox" ItemsSource="{Binding Pubs}" DisplayMemberPath="Name" >
                
            </ComboBox>
        </Grid>
        <Grid Grid.Row="1" Background="{StaticResource SpecialGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                
                <Image >
                    
                </Image>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                    
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <WrapPanel>
                    <Button Content="+" FontSize="35" Margin="10" Width="100" Height="50" Style="{StaticResource CircleButton}" >
                        
                    </Button>
                        <Label Width="100" FontSize="20" FontFamily="Comic Sans MS" >
                            
                        </Label>
                        <Button  Content="-" FontSize="35" Margin="10" Width="100" Height="50"  Style="{StaticResource CircleButton}" >

                        </Button>

                    </WrapPanel>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Margin="40,20,0,0" Text="Name : " FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                        <TextBlock Margin="40,20,0,0" Text="Price : " FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                        <TextBlock Margin="40,20,0,0" Text="Volume : " FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                    </StackPanel>
                <Grid Grid.Column="1">
                    <StackPanel>
                        
                    <TextBlock x:Name="NameTextBlock" Margin="40,20,0,0"  FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                    <TextBlock x:Name="PriceTextBLock" Margin="40,20,0,0"   FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                    <TextBlock x:Name="VolumeTextBlock"  Margin="40,20,0,0"  FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
                    </StackPanel>
                </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
